# AttackBlob Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# Server Configuration
# ============================================

# Secret key base for signing sessions and cookies
# Generate with: openssl rand -base64 48
SECRET_KEY_BASE=please-change-this-secret-key-in-production

# Hostname for URL generation in production
PHX_HOST=localhost

# Port to listen on (default: 4004 in production, 4000 in dev)
PORT=4004

# ============================================
# Storage Configuration
# ============================================

# Directory where buckets and access keys are stored
ATTACK_BLOB_DATA_DIR=/app/data

# Maximum upload size in bytes (default: 5GB)
# Examples:
#   1GB = 1073741824
#   5GB = 5368709120
#   10GB = 10737418240
ATTACK_BLOB_MAX_UPLOAD_SIZE=5368709120

# ============================================
# CORS Configuration
# ============================================

# Allowed origins for CORS requests
# Options:
#   * = Allow all origins (default, good for development)
#   https://example.com,https://app.example.com = Specific origins
#   (empty) = Disable CORS
CORS_ALLOWED_ORIGINS=*

# Maximum age in seconds for CORS preflight cache
CORS_MAX_AGE=600

# Allow credentials in CORS requests (true or false)
CORS_ALLOW_CREDENTIALS=true
